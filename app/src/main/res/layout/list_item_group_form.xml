<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:padding="8dp"
    >

    <ImageButton
        android:id="@+id/group_form_user_item_deletebutton"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:layout_centerVertical="true"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:src="@drawable/ic_account_remove_grey600_24dp"
        />

    <TextView
        android:id="@+id/group_form_user_item_owner"
        style="@style/TextBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="5dp"
        android:text="@string/group_admin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/group_form_user_item_owner"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/group_form_user_item_name"
            style="@style/TextHeadline"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/group_form_user_item_studentid"
            style="@style/TextNormal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="gone" />

    </LinearLayout>

</RelativeLayout>